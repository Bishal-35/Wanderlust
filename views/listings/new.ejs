<% layout("/layouts/boilerplate") %>

<body>
    <div class="row">
        <div class="col-8 offset-2 mt-3">

            <h3>Create a new Listing</h3>
    <form action="/listings" method="POST">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="enter title" type="text" class="form-control">
        </div>

        <div class="mb-3">
            <label for="description" class="from-label">Description</label>
            <textarea name="listing[description]" type="text" class="form-control"></textarea>
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="image" class="form-label">Image Filename</label>
                <input name="listing[image]" placeholder="enter image filename" type="text" class="form-control">
            </div>
            <div class="mb-3 col-md-8">
                <label for="image" class="form-label">Image URL</label>
                <input name="listing[image]" placeholder="enter image link/URL" type="text" class="form-control">
            </div>
        </div>

        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="enter price" type="text" class="form-control">
        </div>
        
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" placeholder="enter country" type="text" class="form-control">
        </div>
    </div>

        <div>
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="enter location" type="text" class="form-control">
        </div>

        <button class="btn btn-dark add-btn mt-3">Add</button>

    </form>
</div>
</div>
</body>
